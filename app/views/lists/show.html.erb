<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      Movie: <%= bookmark.movie.title %> /
      <%= bookmark.comment %>
      <%= link_to "Delete", list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
  <% end %>
</ul>


<%= link_to "Back  to list page", lists_path %>
<%= link_to "add a bookmark", new_list_bookmark_path(@list) %>
